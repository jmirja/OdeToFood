@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h2>Restaurants List</h2>

<form method="get">

    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="btn-group">
                <button class="btn btn-outline-dark">Search</button>
            </span>
        </div>
    </div>

</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Cuisine</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Restaurants)
        {
            <tr>
                <td>@r.Name</td>
                <td>@r.Location</td>
                <td>@r.Cuisine</td>
                <td>
                    <a asp-page="./Detail" asp-route-restaurantId="@r.Id" class="btn btn-outline-dark">Detail</a>
                    <a asp-page="./Edit" asp-route-restaurantId="@r.Id" class="btn btn-outline-dark">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./Edit" class="btn btn-primary">Add New</a>

<br/>


@Model.Msg <br/>
@Model.Message
